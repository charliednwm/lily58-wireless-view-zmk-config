#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   `   |
            // |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   -   |
            // |  CTRL |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |   "["  |  |  "]"  |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //                     | ALT  | GUI  | LOWER|  SPACE |  | ENTER | RAISE| BSPC  | GUI   |

            display-name = "Base";
            bindings = <
&kp ESC         &kp N1  &kp N2  &kp N3        &kp N4  &kp N5                          &kp N6     &kp N7         &kp N8     &kp N9   &kp N0    &kp BACKSPACE
&kp TAB         &kp Q   &kp W   &kp E         &kp R   &kp T                           &kp Y      &kp U          &kp I      &kp O    &kp P     &kp BACKSLASH
&kp LEFT_SHIFT  &kp A   &kp S   &kp D         &kp F   &kp G                           &kp H      &kp J          &kp K      &kp L    &kp SEMI  &kp SQT
&kp LCTRL       &kp Z   &kp X   &kp C         &kp V   &kp B   &kp LBKT     &kp RBKT   &kp N      &kp M          &kp COMMA  &kp DOT  &kp FSLH  &kp ENTER
                                &kp LEFT_GUI  &mo 2   &mo 1   &kp SPACE    &kp SPACE  &kp SPACE  &kp RIGHT_ALT  &kp DEL
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        lower_layer {
            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 |                   |      |       |       |      |       |       |
            // |  F1   |  F2 |  F3 |  F4  |  F5  |  F6  |                   |  F7  |  F8   |  F9   |  F10 |  F11  |  F12  |
            // |   `   |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   ~   |
            // |       |     |     |      |      |      |        |  |       |      |  _    |  +    |  {   |   }   |  "|"  |
            //                     |      |      |      |        |  |       |      |       |       |

            display-name = "Lower";
            bindings = <
&kp TILDE  &kp F1   &kp F2  &kp F3          &kp F4  &kp F5                    &kp F6          &kp F7          &kp F8          &kp F9           &kp F10           &kp F11
&kp GRAVE  &kp F12  &trans  &trans          &trans  &trans                    &kp UNDERSCORE  &kp PLUS        &kp UP_ARROW    &kp EQUAL        &kp LEFT_BRACE    &kp RIGHT_BRACE
&kp CAPS   &trans   &trans  &trans          &trans  &trans                    &kp MINUS       &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT        &kp LEFT_BRACKET  &kp RIGHT_BRACKET
&trans     &trans   &trans  &trans          &trans  &trans  &trans    &trans  &trans          &trans          &trans          &kp PRINTSCREEN  &kp PAGE_DOWN     &kp PG_UP
                            &studio_unlock  &trans  &trans  &trans    &trans  &trans          &trans          &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |       |     |     |      |      |      |                   |      |       |       |      |       |       |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |       |
            // |   F1  |  F2 |  F3 |  F4  |  F5  |  F6  |                   |      |   <-  |   v   |  ^   |  ->   |       |
            // |   F7  |  F8 |  F9 |  F10 |  F11 |  F12 |        |  |       |  +   |   -   |   =   |  [   |   ]   |   \   |
            //                     |      |      |      |        |  |       |      |       |       |

            display-name = "Raise";
            bindings = <
&sys_reset  &bt BT_SEL 0  &bt BT_SEL 1    &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                    &trans     &trans    &trans    &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &trans
&kp GRAVE   &bt BT_CLR    &bt BT_CLR_ALL  &kp N3        &kp N4        &kp N5                          &kp UNDER  &kp PLUS  &kp UP    &kp EQUAL             &kp LEFT_BRACE         &kp RIGHT_BRACE
&kp F1      &kp F2        &kp F3          &kp F4        &kp F5        &kp F6                          &kp MINUS  &kp LEFT  &kp DOWN  &kp RIGHT             &kp LEFT_BRACKET       &kp RIGHT_BRACKET
&kp F7      &kp F8        &kp F9          &kp F10       &kp F11       &kp F12       &trans    &trans  &trans     &trans    &trans    &trans                &trans                 &trans
                                          &trans        &trans        &trans        &trans    &trans  &trans     &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        extra_1 { status = "reserved"; };

        extra_2 { status = "reserved"; };

        extra_3 { status = "reserved"; };
    };
};
